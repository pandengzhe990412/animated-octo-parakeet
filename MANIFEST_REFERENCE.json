{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "gongzhonghao",
  "version": "0.1.0",
  "description": "AI-powered tool to convert Feishu/Lark documents to WeChat Official Account articles",
  "author": "Your Name",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/16.png",
      "32": "icon/32.png",
      "48": "icon/48.png",
      "128": "icon/128.png"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "sidepanel",
    "storage"
  ],
  "host_permissions": [
    "https://*.feishu.cn/*",
    "https://*.larksuite.com/*",
    "https://*.qq.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.feishu.cn/*", "https://*.larksuite.com/*"],
      "js": ["content.tsx"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.ts"
  },
  "web_accessible_resources": [
    {
      "matches": ["https://*.feishu.cn/*", "https://*.larksuite.com/*"],
      "resources": ["content.tsx"]
    }
  ]
}
